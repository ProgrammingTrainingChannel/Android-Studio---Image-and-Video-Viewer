<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nebiyou.imageandvideoviewer.PlaySoundActivity">

    <Button
        android:id="@+id/btnplayCheeringSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnplayCheeringSound"
        android:text="play Cheering Sound" />

    <Button
        android:id="@+id/btnplayinCorrectSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnplayinCorrectSound"
        android:text="Play inCorrect Sound" />
</LinearLayout>
